                                ContentType="{x:Type v:OptionsView}" />
                        </Button.CommandParameter>
                        <StackPanel>
                            <DrawingPresenter Drawing="{DynamicResource Icon.Property}" />
                            <TextBlock Text="Options" />
                        </StackPanel>
                    </Button>
                </RibbonGroup>
            </StackPanel>
        </RibbonTab>

        <RibbonTab Header="Search">
            <StackPanel>
                <RibbonGroup Header="Location">
                    <StackPanel>
                        <ToggleButton Classes="Small" ToolTip.Tip="Current Folder">
                            <StackPanel>
                                <DrawingPresenter Drawing="{DynamicResource Icon.Folder}" />
                                <TextBlock Text="Current Folder" />
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton Classes="Small" ToolTip.Tip="All Subfolders">
                            <StackPanel>
                                <DrawingPresenter Drawing="{DynamicResource Icon.SubFolders}" />
                                <TextBlock Text="All Subfolders" />
                            </StackPanel>
                        </ToggleButton>
                        <Button Classes="Small" ToolTip.Tip="Search Again In">
                            <StackPanel>
                                <DrawingPresenter Drawing="{DynamicResource Icon.FindInFiles}" />
                                <TextBlock Text="Search Again In" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </RibbonGroup>

                <RibbonGroup Header="Refine">
                    <Button Classes="Large" ToolTip.Tip="Date Modified">
                        <StackPanel>
                            <DrawingPresenter Drawing="{DynamicResource Icon.Calendar}" />
                            <TextBlock Text="Date Modified" />
                        </StackPanel>
                    </Button>
                    <StackPanel>
                        <Button Classes="Small" ToolTip.Tip="Kind">
                            <StackPanel>
                                <DrawingPresenter Drawing="{DynamicResource Icon.ContentType}" />
                                <TextBlock Text="Kind" />
                            </StackPanel>
                        </Button>
                        <Button Classes="Small" ToolTip.Tip="Size">
