<UserControl
    x:Class="Jaya.Ui.Views.NavigationView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:m="clr-namespace:Jaya.Ui.Models;assembly=Jaya.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Jaya.Ui.ViewModels;assembly=Jaya.Ui"
    d:DesignHeight="320"
    d:DesignWidth="220"
    BorderBrush="{DynamicResource ThemeControlMidBrush}"
    BorderThickness="1"
    IsVisible="{Binding PaneConfig.IsNavigationPaneVisible, Mode=OneWay}"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:NavigationViewModel />
    </UserControl.DataContext>

    <TreeView BorderThickness="0" Items="{Binding Providers}">
        <TreeView.DataTemplates>
            <TreeDataTemplate DataType="m:ProviderModel" ItemsSource="{Binding Directory.Directories}">
                <TextBlock Text="{Binding Name}" />
            </TreeDataTemplate>
            <TreeDataTemplate DataType="m:DirectoryModel" ItemsSource="{Binding Directories}">
                <TextBlock Text="{Binding Name}" />
            </TreeDataTemplate>
        </TreeView.DataTemplates>
    </TreeView>
</UserControl>
